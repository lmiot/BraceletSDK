<?xml version="1.0" encoding="utf-8"?>

<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/id_about_title"
        layout="@layout/title_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="8%h"
        app:layout_widthPercent="100%w"
        />
    <LinearLayout
        android:id="@+id/id_trend_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="82%h"
        app:layout_widthPercent="100%w"
        android:orientation="vertical"
        android:layout_below="@+id/id_about_title"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:visibility="invisible"
                android:id="@+id/id_trendat_year_left_arrow"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:src="@drawable/arrow_left"
                android:layout_centerVertical="true"
                android:layout_marginLeft="22dp"/>
            <TextView
                android:id="@+id/id_tv_trendat_year"
                android:layout_width="100dp"
                android:layout_height="26dp"
                android:text="2016"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                />
            <ImageView
                android:visibility="invisible"
                android:id="@+id/id_trendat_year_right_arrow"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/arrow_right"
                android:layout_centerVertical="true"
                android:layout_marginRight="22dp"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_mydevice_background"/>
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="50dp">
           <View
               android:layout_width="match_parent"
               android:layout_height="2dp"
               android:layout_marginBottom="4dp"
               android:layout_alignParentBottom="true"
               android:background="@color/color_mydevice_background"/>
           <CheckBox
               android:id="@+id/id_cb_trendat_day"
               android:text="日"
               android:paddingBottom="10dp"
               android:background="@drawable/selector_date"
               android:layout_width="50dp"
               android:button="@null"
               android:layout_marginLeft="45dp"
               android:layout_marginTop="5dp"
               android:gravity="center"
               android:textSize="20sp"
               android:layout_height="45dp" />
           <CheckBox
               android:id="@+id/id_cb_trendat_week"
               android:text="周"
               android:button="@null"
               android:layout_width="50dp"
               android:background="@drawable/selector_date"
               android:layout_height="45dp"
               android:textSize="20sp"
               android:paddingBottom="10dp"
               android:gravity="center"
               android:layout_marginTop="5dp"
               android:layout_alignParentBottom="true"
               android:layout_centerHorizontal="true" />
           <CheckBox
               android:id="@+id/id_cb_trendat_month"
               android:text="月"
               android:button="@null"
               android:layout_width="50dp"
               android:background="@drawable/selector_date"
               android:gravity="center"
               android:textSize="20sp"
               android:paddingBottom="10dp"
               android:layout_height="45dp"
               android:layout_alignParentBottom="true"
               android:layout_alignParentRight="true"
               android:layout_alignParentEnd="true"
               android:layout_marginRight="49dp"
               android:layout_marginEnd="49dp" />

       </RelativeLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/id_vp_trendat"
             android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v4.view.ViewPager>


    </LinearLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="10%h"
        app:layout_widthPercent="100%w"
        android:layout_below="@+id/id_trend_layout"

        >
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_mydevice_background"/>
        <CheckBox

            android:button="@null"
            android:id="@+id/id_iv_trendat_week"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:background="@drawable/consumption_small_gray"
            android:scaleType="fitXY"/>
        <CheckBox
            android:button="@null"
            android:id="@+id/id_iv_trendat_day"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignTop="@id/id_iv_trendat_week"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/pace_small_green"
            android:layout_marginLeft="55dp"/>
        <CheckBox
            android:button="@null"
            android:id="@+id/id_iv_trendat_mooth"
            android:layout_alignTop="@id/id_iv_trendat_week"
            android:layout_marginRight="55dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/sleep_small_gray"
            android:scaleType="fitXY"/>
    </RelativeLayout>
</com.zhy.android.percent.support.PercentRelativeLayout>